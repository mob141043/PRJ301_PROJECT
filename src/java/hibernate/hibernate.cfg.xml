<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=STUDENT_ATTENDANCE_MANAGEMENT</property>
        <property name="hibernate.connection.username">sonvhh</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name = "hibernate.jdbc.batch_size">50</property>
        <mapping class="entity.Student" /> 
        <mapping class="entity.Class" />
        <mapping class="entity.Course" />
        <mapping class="entity.Teacher" />
        <mapping class="entity.Account" />
        <mapping class="entity.Group" />
        <mapping class="entity.StudentGroup" />
        <mapping class="entity.TeacherGroup" />
        <mapping class="entity.Schedule" />
        <mapping class="entity.StudentAttendance" />
    </session-factory>
</hibernate-configuration>
